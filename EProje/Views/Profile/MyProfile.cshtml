<!-- Modal Başlangıcı -->
<div class="modal fade" id="adminModal" tabindex="-1" aria-labelledby="adminModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0">
            <div class="modal-header">
                <h5 class="modal-title" id="categoryModalLabel">Profilim Yönetimi</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="image-upload-container mb-4">
                            <label for="image-upload" class="upload-area">
                                <div class="upload-content">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-primary mb-3"></i>
                                    <h5>Resim Yükle</h5>
                                    <p class="text-muted mb-1">Profilinizde görülecek resmi seçmek için tıklayın!</p>
                                    <small class="text-muted">PNG, JPG (Max. 2MB)</small>
                                </div>
                                <img id="preview" class="preview-image" alt="Önizleme">
                                <input type="file" id="image-upload" class="d-none" accept="image/*">
                            </label>
                            <div class="image-requirements text-muted mt-2">
                                <small>Önerilen boyut: 800x400px</small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label for="adminName" class="form-label fw-bold">İsim*</label>
                            <input type="text" class="form-control form-control-lg" id="adminName"
                                   placeholder="Buraya isminizi yazın..." required>
                        </div>

                        <div class="form-group mb-4">
                            <label for="adminSurname" class="form-label fw-bold">Soyisim*</label>
                            <input type="text" class="form-control form-control-lg" id="adminSurname"
                                   placeholder="Buraya soyisminizi yazın..." required>
                        </div>

                        <div class="form-group mb-4">
                            <label for="email" class="form-label fw-bold">Email*</label>
                            <input type="email" class="form-control form-control-lg" id="email"
                                   placeholder="Buraya email adresinizi yazın..." required>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="form-label fw-bold">Şifre*</label>
                            <input type="password" class="form-control form-control-lg" id="password"
                                   placeholder="Buraya şifresinizi yazın..." required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 bg-light">
                <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Vazgeç
                </button>
                <button type="button" class="btn btn-primary rounded-pill px-4" id="saveProfileBtn">
                    <i class="fas fa-save me-2"></i>Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Modal açılırken formu ayarla
    document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', function () {
            const modal = document.getElementById('adminModal');

            const isEdit = this.classList.contains('edit-admin-btn');
            modal.setAttribute('data-mode', isEdit ? 'edit' : 'create');

            if (isEdit) {
                document.querySelector('input[placeholder="Buraya isminizi yazın..."]').value = this.getAttribute('data-firstname');
                document.querySelector('input[placeholder="Buraya soyisminizi yazın..."]').value = this.getAttribute('data-lastname');
                document.querySelector('input[placeholder="Buraya email adresinizi yazın..."]').value = this.getAttribute('data-email');
                document.querySelector('input[placeholder="Buraya şifresinizi yazın..."]').value = this.getAttribute('data-password');
                const image = this.getAttribute('data-image');
                if (image) document.getElementById('preview').src = image;
                modal.setAttribute('data-id', this.getAttribute('data-id'));
            } else {
                document.querySelector('input[placeholder="Buraya isminizi yazın..."]').value = "";
                document.querySelector('input[placeholder="Buraya soyisminizi yazın..."]').value = "";
                document.querySelector('input[placeholder="Buraya email adresinizi yazın..."]').value = "";
                document.querySelector('input[placeholder="Buraya şifresinizi yazın..."]').value = "";
                document.getElementById('preview').src = "";
                modal.removeAttribute('data-id');
            }
        });
    });

    // Profilim güncelleme işlemi
    document.querySelector('#adminModal .btn-primary').addEventListener('click', () => {
        const modal = document.getElementById('adminModal');
        const mode = modal.getAttribute('data-mode');
        const id = modal.getAttribute('data-id');

        const firstname = document.querySelector('input[placeholder="Buraya isminizi yazın..."]').value;
        const lastname = document.querySelector('input[placeholder="Buraya soyisminizi yazın..."]').value;
        const email = document.querySelector('input[placeholder="Buraya email adresinizi yazın..."]').value;
        const password = document.querySelector('input[placeholder="Buraya şifresinizi yazın..."]').value;
        const imageSrc = document.getElementById('preview').src;

        const payload = {
            id: mode === 'edit' ? id : '00000000-0000-0000-0000-000000000000',
            firstname: firstname,
            lastname: lastname,
            imageSrc: imageSrc,
            email: email,
            password: password,
            active: true,
        };

        const endpoint = mode === 'edit' ? '/Profile/UpdateAdmin' : '/Profile/AddAdmin';

        fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || "İşlem başarısız.");
            }
        })
        .catch(() => alert('Sunucu hatası oluştu.'));
    });

    // Profilim silme işlemi
    document.querySelectorAll('.delete-admin-btn').forEach(button => {
        button.addEventListener('click', function () {
            const adminId = this.getAttribute('data-id');
            if (!confirm("Bu admin silmek istiyor musunuz?")) return;

            fetch('/Profile/DeleteAdmin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: parseInt(adminId) })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message || 'Silme işlemi başarısız oldu.');
                    }
                })
                .catch(() => alert('Sunucu hatası oluştu.'));
        });
    });
</script>

